package jdbc;

import java.sql.*;
import java.util.*;

public class Demo_15 {

    public static void main(String[] args) {
        try {
            // Load the MySQL JDBC driver
            Class.forName("com.mysql.cj.jdbc.Driver");

            // Establish a connection to the database
            Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/info?autoReconnect=true&useSSL=false", "root", "Satara@123");

            // Create a Scanner to read input from the user
            Scanner sc = new Scanner(System.in);
            System.out.println("Enter city ");

            // Read the city input from the user
            String city = sc.next();

            // Prepare and execute the CallableStatement
            CallableStatement cst = con.prepareCall("{? call findavg(?)}");
            cst.registerOutParameter(1, Types.INTEGER);
            cst.setString(2, city);
            cst.execute();

            // Retrieve and print the result from the stored procedure
            System.out.println("Average = " + cst.getInt(1));

            // Close the connection
            con.close();
        } catch (Exception e) {
            // Handle exceptions
            e.printStackTrace();
        }
    }
}
